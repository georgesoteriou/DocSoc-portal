include ./layout.pug
.member
  nav.header.navbar
    .container-fluid
      h1.col-10 Hello there, #{name}
      form.col-2(method="post" action="/logout")
        button.btn-primary.btn-lg(type='submit') Logout
  .cvs.container-fluid
    .row
      h1.col Your CVs:
    br
    if error
      .alert.alert-danger(role="alert") 
        strong oh snap! 
        | #{error}
    .row
      each file in files
        .col-lg-3.col-sm-8.mr-md-auto.container-fluid
          .card-body.cv
            .card-title
              h3.col Name: #{file.slice(0, -4)}
            .padding
              br
              br
            form.rename-row-padding.rename-row.row.d-none(action="/rename-cv/"+file  method="post")
              input.col-10(type="text", name="pdfname")
              button.col-2.btn.btn-outline-light(type='submit')
                span.octicon.octicon-check
            .row.bottom-allign
              form.col-4(action="/member-show-cv/"+file method="post")
                button.btn.btn-outline-light.full-width(type='submit')
                  span.octicon.octicon-eye
              .col-4
                button.rename.btn.btn-outline-light.full-width
                  span.octicon.octicon-pencil
              form.col-4(action="/remove-cv/" + file method="post")
                button.btn.btn-outline-light.full-width(type='submit')
                  span.octicon.octicon-trashcan
      if(files.length < 4)
        .col-lg-3.col-sm-8.mr-md-auto.container-fluid
          .card-body.cv
            .row
              h3.col Upload CV:
            form(method="post" action="/upload-cv" encType="multipart/form-data")
              .row.name-row-padding
                label.col-4(for="pdfname" value="CV_" + 1) Name:
                input.col-8(type="text", name="pdfname")
              .row
                input.col-9.upload-padding(type="file", name="file")
                button.col-2.btn.btn-outline-light.submit(type='submit')
                  span.octicon.octicon-cloud-upload
  br
  br
  .container-fluid
    .row
      h1.col Send your CVs:
    br
    .row
      .send-cvs.container-fluid
        .row
          .col.color1.table-heading.head(style="border-top-left-radius: 5px") Sponsors
          .col.color1.table-heading.head Position
          .col.color1.table-heading.head Info
          for i in [0,1,2,3,4]
            if files[i] != undefined
              .col.color.table-heading.head CV: #{files[i].slice(0, -4)} 
          .col.color.table-heading.head(style="border-top-right-radius: 5px") none
          if(files.length % 2 === 0)
            .color
        form(method="post" action="/send-cv")
          for r in rows
            fieldset
            .row.send-row
              .col.color1.table-heading
                .align= r.sponsor
              .col.color1.table-heading
                .align= r.position
              .col.color1.table-heading
                .align= r.info
              for i in [0,1,2,3,4,5]
                if files[i] != undefined || i === 5
                    if(i === r.cv) 
                      .col.color 
                        input.radio(type="radio" checked="checked" name=r.sponsorUsername + '-' + r.position + '-' + files[i])
                    else
                      .col.color
                        input.radio(type="radio" name=r.sponsorUsername + '-' + r.position + '-' + files[i])
              if(files.length % 2 === 0)
                .color
          br
          .row
            button.col-6.btn.btn-primary.btn-lg.send-cv-button(type='submit') Send CV
